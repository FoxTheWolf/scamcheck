  {
    "name": "Safire",
    "version": "0.0.1.0",
    "description": "This Extension can detect scams",
    "permissions": ["storage", "<all_urls>", "tabs", "declarativeContent"],
    "background": {
      "scripts": ["safire.js"],
      "persistent": false
    },
    "browser_action": {
      "default_title": "Safire",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon32.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon32.png",
      "128": "images/icon128.png"
    },
    "options_page": "options.html",
    "manifest_version": 2
  }
